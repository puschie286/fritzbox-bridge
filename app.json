        "measure_battery",
        "measure_battery_low",
        "target_temperature",
        "measure_temperature",
        "measure_temperature.komfort",
        "measure_temperature.night"
      ],
      "capabilitiesOptions": {
        "target_temperature": {
          "min": 8,
          "max": 28 
        },
        "measure_temperature.komfort": {
          "title": {
            "en": "Fritzbox: comfort temperature",
            "de": "Fritzbox: Komforttemperatur"
          }
